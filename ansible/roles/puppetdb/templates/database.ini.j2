[database]
classname = org.postgresql.Driver
subprotocol = postgresql

subname = //localhost:5432/puppetdb

username = puppetdb
password = puppetdb

gc-interval = 60

log-slow-statements = 10
syntax_pgs = true
node-ttl = 0s
node-purge-ttl = 0s
report-ttl = 14d
conn-max-age = 60
conn-keep-alive = 45
conn-lifetime = 0
